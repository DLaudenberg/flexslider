{
    "name":"asconsulting/flexslider",
    "description":"Flexslider implementation for Contao CMS",
    "homepage": "https://andrewstevens.consulting",
    "keywords":["contao", "flexslider"],
    "type":"contao-module",
    "license":"LGPL-3.0-or-later",
    "authors":[
        {
            "name":"Andrew Stevens",
            "homepage":"https://andrewstevens.consulting"
        }
    ],
	"repositories": [ 
        {
            "type": "vcs",
            "url": "https://github.com/woocommerce/FlexSlider"
        }    
    ],
    "require":{
        "php": "~5.4 || ~7.0",
        "contao/core-bundle": "^3.5.2 || ~4.4",
        "contao-community-alliance/composer-plugin": "~2.4 || ~3.0",
		"woocommerce/FlexSlider": "^2.7"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0"
    },
    "autoload": {
        "psr-0": {
            "FlexSlider\\": [
                "system/modules/flexslider/library"
            ]
        }
    },
    "extra": {
	    "contao-manager-plugin": "FlexSlider\\ContaoManager\\Plugin",
        "contao": {
            "sources": {
                "system/modules/flexslider": "system/modules/flexslider"
            }
        }
    },
    "minimum-stability": "dev"
}